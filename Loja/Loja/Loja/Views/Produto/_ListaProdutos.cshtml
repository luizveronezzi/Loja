@model List<Data.Models.ProdutoModel>

<div class="col-12 shape">
    <table id="tableproduto" class="table table-hover table-sm">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(m => Model.FirstOrDefault().Referencia)</th>
                <th>@Html.DisplayNameFor(m => Model.FirstOrDefault().Descricao)</th>
                <th>Ação</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Referencia</td>
                    <td>@item.Descricao</td>
                    <td>
                        <buttom onclick="Manutencao(@item.Id,1)" data-toggle="tooltip" title="Editar"><i class="fas fa-pencil-alt fa-lg" style="color:gray;"></i></buttom>
                        <buttom onclick="Manutencao(@item.Id,0)" data-toggle="tooltip" title="Excluir"><i class="far fa-trash-alt fa-lg" style="color:gray;"></i></buttom>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
